<!DOCTYPE html>
<html lang="en">
<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>CUNYPlus</title>
  <meta name="description" content="CUNYPlus">
  <meta name="keywords" content="Javascript web app" />
  <meta name="author" content="Min, Martin, Johnny">

  <!-- Mobile Metas -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Google Fonts  -->
  <link href='http://fonts.googleapis.com/css?family=Lato:300,400' rel='stylesheet' type='text/css'> <!-- Navbar font -->

  <!-- Libs and Plugins CSS -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
  <!-- homepage style -->
  <link rel="stylesheet" href="/css/homepage/style.css">
  <link rel="stylesheet" href="/css/homepage/mobile.css">  <!-- homepage only -->
  <!-- discussions page side menu -->
  <link href="/css/sb-admin.css" rel="stylesheet">


</head>
  <body data-spy="scroll" data-target="#main-navbar">
      <!-- <div class="page-loader"></div>  Display loading image while page loads -->
    <div class="body">

          <!--========== BEGIN HEADER ==========-->
          <header id="header" class="header-main">

              <!-- Begin Navbar -->
              <nav id="main-navbar" class="navbar navbar-default navbar-fixed-top" role="navigation"> <!-- Classes: navbar-default, navbar-inverse, navbar-fixed-top, navbar-fixed-bottom, navbar-transparent. Note: If you use non-transparent navbar, set "height: 98px;" to #header -->
                <div class="container">
                  <!-- Brand and toggle get grouped for better mobile display -->
                  <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                      <span class="sr-only">Toggle navigation</span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand page-scroll" href="/">CUNYPlus</a>
                  </div>

                  <!-- Collect the nav links, forms, and other content for toggling -->
                  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                    {{#if user}}
                        <li class="dropdown"><a href="/">Home</a></li>
                        <li class="dropdown">
                          <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{user.username}}&nbsp; &nbsp;<i class="fa fa-user-o" aria-hidden="true"></i><b class="caret"></b></a>
                            <ul class="dropdown-menu">
                              <li>
                                  <a href="/profile"><i class="fa fa-fw fa-user"></i> Profile</a>
                              </li>
                              <li class="divider"></li>
                              <li id="logout">
                                <a href="/logout"><i class="fa fa-fw fa-power-off" ></i> Log Out</a>
                              </li>
                            </ul>
                        </li>
                        <li class="dropdown"><a href="/discussions">Discussions</a></li>
                        <li class="dropdown"><a href="/posts">Post</a></li>

                    {{else}}
                        <li class="dropdown"><a href="/login">Login</a></li>
                        <li class="dropdown"><a href="/signup">Sign Up</a></li>
                        {{/if}}

                    </ul>
                  </div><!-- /.navbar-collapse -->
                </div><!-- /.container -->
              </nav>
              <!-- End Navbar -->

          </header>
          <!-- ========= END HEADER =========-->


              {{{body}}}




          <footer>
          <div class="footer">
                <div class="container text-center wow fadeIn" data-wow-delay="0.4s">
                  <p class="copyright">Copyright &copy; 2016 CUNYPlus </p>
                 </div>
               </div>
            </footer>

  </div>
  <!-- Plugins JS -->
  <script src="/js/jquery-1.11.1.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <!-- slideShow -->
  <script src="/js/owl.carousel.min.js"></script>
  <!-- Theme JS -->
  <script src="/js/theme.js"></script>

  </body>
